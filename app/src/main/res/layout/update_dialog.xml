<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="18dp">
    <ImageView
        android:id="@+id/updFoto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryDark"
        android:src="@drawable/addphoto"
        />

    <ImageView
        android:id="@+id/updRechnung"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryDark"
        android:src="@drawable/addphoto" />
        <EditText
            android:id="@+id/updSache"
            android:layout_below="@id/updFoto"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Sache"
            android:layout_centerHorizontal="true"
            android:ems="10"/>
        <EditText
            android:id="@+id/updPreis"
            android:layout_below="@+id/updSache"
            android:hint="Preis"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/updDatum"
            android:layout_below="@+id/updPreis"
            android:hint="Kaufdatum"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/updUpdate"
            android:layout_below="@+id/updDatum"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:minWidth="160dp"
            android:text="Ã„ndern"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/utxtFoto"
            android:layout_below="@+id/updFoto"
            android:hint="Sache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/updFoto"
            android:layout_marginLeft="43dp"/>
        <TextView
            android:id="@+id/utxtRechnung"
            android:layout_below="@+id/updFoto"
            android:hint="Rechnung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/updRechnung"
            android:layout_marginRight="28dp"/>


    </RelativeLayout>

</LinearLayout>